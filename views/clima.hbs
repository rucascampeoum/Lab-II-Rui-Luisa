            padding: 20px;
        }

        .icons{
            align-content: center;
        }

        ul{
            background-color:white;
            padding: 20px;
            font-family: Montserrat, sans-serif;
            list-style-type: none;
            color: #000;
            align-content: center;
            text-align: center;
        }
